    margin-top 60px

.g_arrows
  .arrows
    width 60px
    height 72px
    position absolute
    left 50%
    margin-left -30px
    bottom 20px
  .arrows path
    stroke rgba(white,0.6)
    fill transparent
    stroke-width 1.5px
    animation arrow 2s infinite
    -webkit-animation arrow 2s infinite
  .arrows path.a1
    animation-delay -1s
    -webkit-animation-delay -1s
  .arrows path.a2
    animation-delay -0.5s
    -webkit-animation-delay -0.5s
  .arrows path.a3
    animation-delay 0s
    -webkit-animation-delay 0s

  @keyframes arrow {
      0% {
          opacity: 0
      }
      40% {
          opacity: 1
      }
      80% {
          opacity: 0
      }
      100% {
          opacity: 0
      }
  }
  @-webkit-keyframes arrow
  {
      0% {
          opacity: 0
      }
      40% {
          opacity: 1
      }
      80% {
          opacity: 0
      }
      100% {
          opacity: 0
      }
  }
